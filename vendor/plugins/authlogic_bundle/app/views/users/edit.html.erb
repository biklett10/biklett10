<% title t('users.titles.edit') %>

<% form_for @user, :url => account_path do |f| %>
  <%= f.error_messages %>
  <fieldset>
    <legend><%= t('users.basic_information') %></legend>
    <p>
      <%= f.label :login %><br />
      <%= f.text_field :login %>
    </p>
    <p>
      <%= f.label :email %><br />
      <%= f.text_field :email %>
    </p>
  </fieldset>
  <fieldset>
    <legend><%= t('users.authentication_toggle', :token => authentication_toggle) %></legend>
    <div id="password_box"<% unless @user.openid_identifier.blank? %> style="display: none;"<% end %>>
      <p>
        <%= f.label :password, t('users.password') %><br />
        <%= f.password_field :password %>
      </p>
      <p>
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation %>
      </p>
    </div>
    <div id="openid_box"<% if @user.openid_identifier.blank? %> style="display: none;"<% end %>>
      <p>
        <%= f.label :openid_identifier, openid_link %><br />
        <%= f.text_field :openid_identifier %>
      </p>
    </div>
  </fieldset>
  <fieldset>
    <legend><%= t('users.preference') %></legend>
    <% f.fields_for :preference, (@user.preference || @user.build_preference) do |p| %>
    <p>
      <%= p.label :language %><br />
      <%= p.select :language, @languages_available, :include_blank => true %>
    </p>
    <p>
      <%= p.label :time_zone %><br />
      <%# f.select :time_zone, ActiveSupport::TimeZone.all.map {|tz| [tz.to_s, tz.tzinfo.name] }, :include_blank => true %>
      <%= p.time_zone_select :time_zone, nil, :include_blank => true %>
    </p>
    <% end %>
  </fieldset>
  <p>
    <%= f.submit t('common.actions.update') %>
  </p>
<% end %>