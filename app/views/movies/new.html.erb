<h1>New movie</h1>

<% form_for(@movie) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>

  <label>
    Release Year
    <%= f.select :release_year, (1900..2009).to_a.map(&:to_s) %>
  </label>
<!--
  <p>
    <%= f.label :release_year %><br />
    <%= f.text_field :release_year %>
  </p>
-->
  <% @genres.each do |genre| %>
    <label>
      <%=h genre.name %>
      <%= check_box_tag "genres[]", genre.id %>
    </label>
  <% end %>
  
  <p>
    <%= f.submit 'Save' %>
  </p>
<% end %>

<%= link_to 'Back', movies_path %>
