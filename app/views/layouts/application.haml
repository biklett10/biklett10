!!!

%html{html_attrs('en-US')}
  %head
    %meta{ 'http-equiv' => 'content-type', :content => 'text/html;charset=UTF-8'}
    %title Bikle Twitter Tool (BTT)
  %body
    %table.main_table{:width => '98%', :border => '1'}
      %tr.main_tr
        %td.lhs{:valign => 'top'} 
          %a{:href => '/login'}Login
          %br/
          %a{:href => '/register'}Register
          %br/
          Logged in as:
          %p{:style => "color:green"}=(session[:login]||"not_logged_in")
          %br/
          =link_to 'My Twitter Accounts', twitter_accounts_path
          %br/
          %br/
          =link_to(h(@twitter_account.twitter_login), @twitter_account) if @twitter_account
          %br/
          =link_to("Friends", :action => "query_friends", :id => @twitter_account) if @twitter_account
          %br/
          =link_to("Followers", :action => "query_followers", :id => @twitter_account) if @twitter_account
          %br/
          %hr/
          %a{:href => '/profile'}Profile
          %br/
          %a{:href => '/logout'}Logout
          %br/
          %br/
          %br/
          %br/
          %a{:href => '/static/messages',:style => "color:white"}Messages

        %td.rhs{:valign => 'top'}
          %p{:style => "color:green"}= flash[:notice]
          =yield
