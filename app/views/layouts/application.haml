!!!

%html{html_attrs('en-US')}
  %head
    %meta{ 'http-equiv' => 'content-type', :content => 'text/html;charset=UTF-8'}
    %title M2
  %body
    %table.main_table{:width => '98%', :border => '1'}
      %tr.main_tr
        %td.lhs{:valign => 'top'} 
          %a{:href => '/login'}Login
          %br/
          %a{:href => '/signup'}Register
          %br/
          Logged in as:
          %p{:style => "color:green"}=@the_user
          %br/
          %a{:href => '/static/messages'}Messages
          %br/
          %a{:href => '/profile'}Profile
          %br/
          %a{:href => '/logout'}Logout

        %td.rhs{:valign => 'top'}
          -if flash[:notice]
            %p{:style => "color:green"}= flash[:notice]
          =yield
